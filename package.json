{
  "name": "react-boilerplate",
  "version": "0.0.0",
  "repository": "git@github.com:araya-playground/react-boilerplate.git",
  "author": "arayaryoma",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build:dev": "NODE_ENV=development webpack",
    "build:stg": "NODE_ENV=staging webpack",
    "build:prd": "NODE_ENV=production webpack",
    "dev": "NODE_ENV=development webpack serve",
    "test": "yarn run type-check && jest",
    "type-check": "tsc --noEmit",
    "fmt": " eslint --fix --ext .tsx --ext .ts src/ && prettier --write src/**/*",
    "lint": "eslint src --ext .tsx,.ts,.jsx,.js --max-warnings 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{html,scss,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "autoprefixer": "^10.2.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.1",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^2.5.3",
    "prettier": "^2.2.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.12.3",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1"
  }
}
