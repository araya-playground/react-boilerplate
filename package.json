{
  "name": "react-boilerplate",
  "version": "0.0.0",
  "engines": {
    "node": "^12.0.0"
  },
  "repository": "git@github.com:araya-playground/react-boilerplate.git",
  "author": "arayaryoma",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build:dev": "NODE_ENV=development webpack",
    "build:stg": "NODE_ENV=staging webpack",
    "build:prd": "NODE_ENV=production webpack",
    "dev": "NODE_ENV=development webpack-dev-server",
    "test": "yarn run type-check && jest",
    "type-check": "tsc --noEmit",
    "fmt": " eslint --fix --ext .tsx --ext .ts src/ && prettier --write src/**/*",
    "lint": "eslint src --ext .tsx,.ts,.jsx,.js --max-warnings 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{html,scss,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.38",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "autoprefixer": "^9.8.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^6.0.2",
    "css-loader": "^3.6.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "style-loader": "^1.2.1",
    "typescript": "^3.9.5",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
